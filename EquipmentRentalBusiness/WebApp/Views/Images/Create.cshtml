@model WebApp.ViewModels.ImageCreateEditViewModel

@{
    ViewData["Title"] = "Create";
}

<h4>@Resources.Views.Image.Create.Create.AddNewImage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <partial name="_CreateEdit" model="@Model"/>
            
            <div class="form-group">
                <input type="submit" value="@Resources.Views.Shared.Common.Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Views.Shared.Common.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
