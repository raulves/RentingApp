@model WebApp.ViewModels.ImageCreateEditViewModel


    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Picture)
        </dt>
        <dd class = "col-sm-10">
            <img src="data:image/*;base64,@Convert.ToBase64String(Model.Picture!)" class="card-img-top images" style="display: block;" alt="Image">
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ItemId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item!.Description)
        </dd>
       
    </dl>

