@model WebApp.ViewModels.ItemDescriptionCreateEditViewModel

@{
    ViewData["Title"] = Resources.Views.Shared.Common.Create;
}


<h4>@Resources.Views.ItemDescription.Create.Create.AddNewItemDescription</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductDescriptionId" class="control-label"></label>
                <select asp-for="ProductDescriptionId" class="form-control" asp-items="Model.ProductDescriptionSelectList"></select>
                <input asp-for="Description" class="form-control"/>
                <span asp-validation-for="ProductDescriptionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemId" class="control-label"></label>
                <select asp-for="ItemId" class="form-control" asp-items="Model.ItemSelectList"></select>
                <span asp-validation-for="ItemId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="@Resources.Views.Shared.Common.Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Views.Shared.Common.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
