@model WebApp.ViewModels.CompanyCreateEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h4>@Resources.Views.Companies.Edit.Edit.EditCompany</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            
            <partial name="_CreateEdit" model="@Model"/>
            
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="@Resources.Views.Shared.Common.Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AppUserCompanies">@Resources.Views.Shared.Common.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
